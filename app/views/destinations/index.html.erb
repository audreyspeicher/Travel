<h1>Destinations</h1>

<div class="row">
  <% @destinations.each do |destination| %>
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-body">
        <h2><%= destination.city %></h2>
        <h3><%= destination.country %></h3>
        <% if destination.avatar_file_name %>
        <%= image_tag destination.avatar.url(:medium), class: "image-responsive" %>
        <p><%= destination.description %></p>

        <div class="btn-group">
          <%= link_to "Show", destination, class: "btn btn-default" %>
          <%= link_to "Edit", edit_destination_path(destination), class: "btn btn-default" %>
          <%= link_to "Delete", destination, method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-default" %>

        </div>
      </div>
    </div>
  </div>
  <% end %>
  </div>

